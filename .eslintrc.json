{
  "env": {
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "extends": ["plugin:adonis/typescriptApp", "prettier", "prettier/@typescript-eslint"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
